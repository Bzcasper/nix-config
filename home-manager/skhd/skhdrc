## Navigation (lcmd - ...)
# Space Navigation (four spaces per display): lcmd - {1, 2, 3, 4}
lcmd - 1 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[1] ]] && yabai -m space --focus $SPACES[1]
lcmd - 2 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[2] ]] && yabai -m space --focus $SPACES[2]
lcmd - 3 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[3] ]] && yabai -m space --focus $SPACES[3]
lcmd - 4 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[4] ]] && yabai -m space --focus $SPACES[4]

# Window Navigation (through display borders): lcmd - {j, k, l, ö}
lcmd - j    : yabai -m window --focus west  || yabai -m display --focus west
lcmd - k    : yabai -m window --focus south || yabai -m display --focus south
lcmd - l    : yabai -m window --focus north || yabai -m display --focus north
lcmd - 0x29 : yabai -m window --focus east  || yabai -m display --focus east

# Extended Window Navigation: lcmd - {h, ä}
lcmd -    h : yabai -m window --focus first
lcmd - 0x27 : yabai -m window --focus  last

# Float / Unfloat window: lcmd - space
lcmd - space : yabai -m window --toggle float; sketchybar --trigger window_focus

# Make window zoom to fullscreen: shift + lcmd - f
shift + lcmd - f : yabai -m window --toggle zoom-fullscreen; sketchybar --trigger window_focus

# Make window zoom to parent node: lcmd - f 
lcmd - f : yabai -m window --toggle zoom-parent; sketchybar --trigger window_focus

## Window Movement (shift + lcmd - ...)
# Moving windows in spaces: shift + lcmd - {j, k, l, ö}
shift + lcmd - j : yabai -m window --warp west || $(yabai -m window --display west && sketchybar --trigger windows_on_spaces && yabai -m display --focus west && yabai -m window --warp last) || yabai -m window --move rel:-10:0
shift + lcmd - k : yabai -m window --warp south || $(yabai -m window --display south && sketchybar --trigger windows_on_spaces && yabai -m display --focus south) || yabai -m window --move rel:0:10
shift + lcmd - l : yabai -m window --warp north || $(yabai -m window --display north && sketchybar --trigger windows_on_spaces && yabai -m display --focus north) || yabai -m window --move rel:0:-10
shift + lcmd - 0x29 : yabai -m window --warp east || $(yabai -m window --display east && sketchybar --trigger windows_on_spaces && yabai -m display --focus east && yabai -m window --warp first) || yabai -m window --move rel:10:0

# Toggle split orientation of the selected windows node: shift + lcmd - s
shift + lcmd - s : yabai -m window --toggle split

# Moving windows between spaces: shift + lcmd - {1, 2, 3, 4, p, n } (Assumes 4 Spaces Max per Display)
shift + lcmd - 1 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[1] ]] \
                  && yabai -m window --space $SPACES[1] \
                  && sketchybar --trigger windows_on_spaces

shift + lcmd - 2 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[2] ]] \
                  && yabai -m window --space $SPACES[2] \
                  && sketchybar --trigger windows_on_spaces

shift + lcmd - 3 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[3] ]] \
                  && yabai -m window --space $SPACES[3] \
                  && sketchybar --trigger windows_on_spaces

shift + lcmd - 4 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[4] ]] \
                  && yabai -m window --space $SPACES[4] \
                  && sketchybar --trigger windows_on_spaces

shift + lcmd - p : yabai -m window --space prev && yabai -m space --focus prev && sketchybar --trigger windows_on_spaces
shift + lcmd - n : yabai -m window --space next && yabai -m space --focus next && sketchybar --trigger windows_on_spaces

# Mirror Space on X and Y Axis: shift + lcmd - {x, y}
shift + lcmd - x : yabai -m space --mirror x-axis
shift + lcmd - y : yabai -m space --mirror y-axis

## Stacks (shift + ctrl - ...)
# Add the active window to the window or stack to the {direction}: shift + ctrl - {j, k, l, ö}
shift + ctrl - j    : yabai -m window  west --stack $(yabai -m query --windows --window | jq -r '.id') && sketchybar --trigger window_focus
shift + ctrl - k    : yabai -m window south --stack $(yabai -m query --windows --window | jq -r '.id') && sketchybar --trigger window_focus
shift + ctrl - l    : yabai -m window north --stack $(yabai -m query --windows --window | jq -r '.id') && sketchybar --trigger window_focus
shift + ctrl - 0x29 : yabai -m window  east --stack $(yabai -m query --windows --window | jq -r '.id') && sketchybar --trigger window_focus

# Stack Navigation: shift + ctrl - {n, p}
shift + ctrl - n : yabai -m window --focus stack.next
shift + ctrl - p : yabai -m window --focus stack.prev

## Resize (ctrl + lcmd - ...)
# Resize windows: ctrl + lcmd - {j, k, l, ö}
ctrl + lcmd - j    : yabai -m window --resize right:-100:0 || yabai -m window --resize left:-100:0
ctrl + lcmd - k    : yabai -m window --resize bottom:0:100 || yabai -m window --resize top:0:100
ctrl + lcmd - l    : yabai -m window --resize bottom:0:-100 || yabai -m window --resize top:0:-100
ctrl + lcmd - 0x29 : yabai -m window --resize right:100:0 || yabai -m window --resize left:100:0

# Equalize size of windows: ctrl + lcmd - e
ctrl + lcmd - e : yabai -m space --balance

# Enable / Disable gaps in current workspace: ctrl + lcmd - g
ctrl + lcmd - g : yabai -m space --toggle padding; yabai -m space --toggle gap

# Enable / Disable gaps in current workspace: ctrl + lcmd - g
ctrl + lcmd - b : yabai -m config window_border off 
shift + ctrl + lcmd - b : yabai -m config window_border on

## Insertion (shift + ctrl + lcmd - ...)
# Set insertion point for focused container: shift + ctrl + lcmd - {j, k, l, ö, s}
shift + ctrl + lcmd - j : yabai -m window --insert west
shift + ctrl + lcmd - k : yabai -m window --insert south
shift + ctrl + lcmd - l : yabai -m window --insert north
shift + ctrl + lcmd - 0x29 : yabai -m window --insert east
shift + ctrl + lcmd - s : yabai -m window --insert stack

## Misc
# Open new kitty window
lcmd - t : kitty

# New window in hor./ vert. splits for all applications with yabai
lcmd - s : yabai -m window --insert east;  skhd -k "cmd - n"
lcmd - v : yabai -m window --insert south; skhd -k "cmd - n"

# Toggle sketchybar
shift + lcmd - space : sketchybar --bar hidden=toggle
shift + lcmd - r : sketchybar --remove '/.*/' && sh -c '$HOME/.config/sketchybar/sketchybarrc'

