## Navigation (loption - ...)
# Space Navigation (four spaces per display): loption - {1, 2, 3, 4}
loption - 1 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[1] ]] && yabai -m space --focus $SPACES[1]
loption - 2 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[2] ]] && yabai -m space --focus $SPACES[2]
loption - 3 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[3] ]] && yabai -m space --focus $SPACES[3]
loption - 4 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[4] ]] && yabai -m space --focus $SPACES[4]

# Window Navigation (through display borders): loption - {j, k, l, ö}
loption - j    : yabai -m window --focus west  || yabai -m display --focus west
loption - k    : yabai -m window --focus south || yabai -m display --focus south
loption - l    : yabai -m window --focus north || yabai -m display --focus north
loption - 0x29 : yabai -m window --focus east  || yabai -m display --focus east

# Extended Window Navigation: loption - {h, ä}
loption -    h : yabai -m window --focus first
loption - 0x27 : yabai -m window --focus  last

# Float / Unfloat window: loption - space
loption - space : yabai -m window --toggle float; sketchybar --trigger window_focus

# Make window zoom to fullscreen: shift + loption - f
shift + loption - f : yabai -m window --toggle zoom-fullscreen; sketchybar --trigger window_focus

# Make window zoom to parent node: loption - f 
loption - f : yabai -m window --toggle zoom-parent; sketchybar --trigger window_focus

## Window Movement (shift + loption - ...)
# Moving windows in spaces: shift + loption - {j, k, l, ö}
shift + loption - j : yabai -m window --warp west || $(yabai -m window --display west && sketchybar --trigger windows_on_spaces && yabai -m display --focus west && yabai -m window --warp last) || yabai -m window --move rel:-10:0
shift + loption - k : yabai -m window --warp south || $(yabai -m window --display south && sketchybar --trigger windows_on_spaces && yabai -m display --focus south) || yabai -m window --move rel:0:10
shift + loption - l : yabai -m window --warp north || $(yabai -m window --display north && sketchybar --trigger windows_on_spaces && yabai -m display --focus north) || yabai -m window --move rel:0:-10
shift + loption - 0x29 : yabai -m window --warp east || $(yabai -m window --display east && sketchybar --trigger windows_on_spaces && yabai -m display --focus east && yabai -m window --warp first) || yabai -m window --move rel:10:0

# Toggle split orientation of the selected windows node: shift + loption - s
shift + loption - s : yabai -m window --toggle split

# Moving windows between spaces: shift + loption - {1, 2, 3, 4, p, n } (Assumes 4 Spaces Max per Display)
shift + loption - 1 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[1] ]] \
                  && yabai -m window --space $SPACES[1] \
                  && sketchybar --trigger windows_on_spaces

shift + loption - 2 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[2] ]] \
                  && yabai -m window --space $SPACES[2] \
                  && sketchybar --trigger windows_on_spaces

shift + loption - 3 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[3] ]] \
                  && yabai -m window --space $SPACES[3] \
                  && sketchybar --trigger windows_on_spaces

shift + loption - 4 : SPACES=($(yabai -m query --displays --display | jq '.spaces[]')) && [[ -n $SPACES[4] ]] \
                  && yabai -m window --space $SPACES[4] \
                  && sketchybar --trigger windows_on_spaces

shift + loption - p : yabai -m window --space prev && yabai -m space --focus prev && sketchybar --trigger windows_on_spaces
shift + loption - n : yabai -m window --space next && yabai -m space --focus next && sketchybar --trigger windows_on_spaces

# Mirror Space on X and Y Axis: shift + loption - {x, y}
shift + loption - x : yabai -m space --mirror x-axis
shift + loption - y : yabai -m space --mirror y-axis

## Stacks (shift + ctrl - ...)
# Add the active window to the window or stack to the {direction}: shift + ctrl - {j, k, l, ö}
shift + ctrl - j    : yabai -m window  west --stack $(yabai -m query --windows --window | jq -r '.id') && sketchybar --trigger window_focus
shift + ctrl - k    : yabai -m window south --stack $(yabai -m query --windows --window | jq -r '.id') && sketchybar --trigger window_focus
shift + ctrl - l    : yabai -m window north --stack $(yabai -m query --windows --window | jq -r '.id') && sketchybar --trigger window_focus
shift + ctrl - 0x29 : yabai -m window  east --stack $(yabai -m query --windows --window | jq -r '.id') && sketchybar --trigger window_focus

# Stack Navigation: shift + ctrl - {n, p}
shift + ctrl - n : yabai -m window --focus stack.next
shift + ctrl - p : yabai -m window --focus stack.prev

## Resize (ctrl + loption - ...)
# Resize windows: ctrl + loption - {j, k, l, ö}
ctrl + loption - j    : yabai -m window --resize right:-100:0 || yabai -m window --resize left:-100:0
ctrl + loption - k    : yabai -m window --resize bottom:0:100 || yabai -m window --resize top:0:100
ctrl + loption - l    : yabai -m window --resize bottom:0:-100 || yabai -m window --resize top:0:-100
ctrl + loption - 0x29 : yabai -m window --resize right:100:0 || yabai -m window --resize left:100:0

# Equalize size of windows: ctrl + loption - e
ctrl + loption - e : yabai -m space --balance

# Enable / Disable gaps in current workspace: ctrl + loption - g
ctrl + loption - g : yabai -m space --toggle padding; yabai -m space --toggle gap

# Enable / Disable gaps in current workspace: ctrl + loption - g
ctrl + loption - b : yabai -m config window_border off 
shift + ctrl + loption - b : yabai -m config window_border on

## Insertion (shift + ctrl + loption - ...)
# Set insertion point for focused container: shift + ctrl + loption - {j, k, l, ö, s}
shift + ctrl + loption - j : yabai -m window --insert west
shift + ctrl + loption - k : yabai -m window --insert south
shift + ctrl + loption - l : yabai -m window --insert north
shift + ctrl + loption - 0x29 : yabai -m window --insert east
shift + ctrl + loption - s : yabai -m window --insert stack

## Misc
# Open new kitty window
loption - t : kitty

# New window in hor./ vert. splits for all applications with yabai
loption - s : yabai -m window --insert east;  skhd -k "cmd - n"
loption - v : yabai -m window --insert south; skhd -k "cmd - n"

# Toggle sketchybar
shift + loption - space : sketchybar --bar hidden=toggle
shift + loption - r : sketchybar --remove '/.*/' && sh -c '$HOME/.config/sketchybar/sketchybarrc'

